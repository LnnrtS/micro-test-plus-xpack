cflags = -O -I../../include -std=c++17 -W -Wall -Werror
ldflags = 

rule cppCompiler
  depfile = $out.d
  command = g++ $cflags -MD -MF $out.d -c $in -o $out

rule cppLinker
  command = g++ $ldflags $in -o $out

build main.cpp.o: cppCompiler ../main.cpp

build micro-test-plus.cpp.o: cppCompiler ../../src/micro-test-plus.cpp

build test: cppLinker main.cpp.o micro-test-plus.cpp.o

build sample.cpp.o: cppCompiler ../sample.cpp

build sample: cppLinker sample.cpp.o micro-test-plus.cpp.o

default test sample
