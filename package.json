{
  "name": "@micro-os-plus/micro-test-plus",
  "version": "1.1.1-pre",
  "description": "A source xPack with ÂµTest++",
  "main": "",
  "scripts": {
    "link-deps": "xpm link @micro-os-plus/build-helper",

    "build-tests-native-debug-cmake": "cmake -S tests/meta -B build/tests-native-debug-cmake -GNinja -DPLATFORM_NAME=native -DCMAKE_BUILD_TYPE=Debug && cmake --build build/tests-native-debug-cmake --verbose",
    "clean-tests-native-debug-cmake": "cmake --build build/tests-native-debug-cmake --verbose --target clean",
    "execute-tests-native-debug-cmake": "cd build/tests-native-debug-cmake && ctest -V",
    "test-native-debug-cmake": "xpm run build-tests-native-debug-cmake && xpm run execute-tests-native-debug-cmake",

    "build-tests-native-release-cmake": "cmake -S tests/meta -B build/tests-native-release-cmake -GNinja -DPLATFORM_NAME=native -DCMAKE_BUILD_TYPE=release && cmake --build build/tests-native-release-cmake --verbose",
    "clean-tests-native-release-cmake": "cmake --build build/tests-native-release-cmake --verbose --target clean",
    "execute-tests-native-release-cmake": "cd build/tests-native-release-cmake && ctest -V",
    "test-native-release-cmake": "xpm run build-tests-native-release-cmake && xpm run execute-tests-native-release-cmake",

    "clean-tests-cmake": "xpm run clean-tests-native-debug-cmake",

    "test-cmake": "xpm run test-native-debug-cmake && xpm run test-native-release-cmake",
    "test": "xpm run test-cmake"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micro-os-plus/micro-test-plus-xpack.git/"
  },
  "bugs": {
    "url": "https://github.com/micro-os-plus/micro-test-plus-xpack/issues/"
  },
  "homepage": "https://github.com/micro-os-plus/micro-test-plus-xpack/",
  "keywords": [
    "xpack",
    "c++",
    "testing",
    "framework",
    "micro-os-plus"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "license": "MIT",
  "config": {},
  "dependencies": {},
  "devDependencies": {
    "@xpack-dev-tools/cmake": "3.19.2-1.1",
    "@xpack-dev-tools/ninja-build": "1.10.1-1.1",
    "@micro-os-plus/build-helper": "github:micro-os-plus/build-helper-xpack#xpack-develop"
  },
  "xpack": {}
}
